<%- include('../partials/header') %>

<div class="hero">
  <h1>Welcome to Our Community Portal</h1>
  <p>We're glad you're here! Our portal is under development. Stay tuned for exciting updates.</p>
</div>

<div class="container">
  <div class="event-placeholder mt-5 shadow">
    <h2>Upcoming Events</h2>
    <% if (upcomingEvents && upcomingEvents.length > 0) { %>
      <ul class="list-group">
        <% upcomingEvents.forEach(event => { %>
          <li class="list-group-item">
            <strong><%= event.name %></strong> - <%= event.date.toLocaleDateString() %> @ <%= event.location %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No upcoming events at the moment. Check back later!</p>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
<%- include('../partials/header') %>

<div class="about-page">
  <h1 class="page-title">Meet Our Team</h1>

  <div class="team-row">
    <% teamMembers.forEach(member => { %>
      <div class="team-member">
        <img src="/images/team/<%= member.photo %>" alt="<%= member.name %>" class="team-photo">
        <h2><%= member.name %></h2>
        <h4><%= member.role %></h4>
        <p><%= member.description %></p>
      </div>
    <% }) %>
  </div>

  <div class="organization-info">
    <p>
      Our platform was built as part of the WPR381 module to demonstrate the power of teamwork,
      technology, and real-world problem-solving. We aim to foster stronger, more connected communities
      through digital solutions that make local events, support, and communication easily accessible to all.
    </p>
  </div>
</div>

<%- include('../partials/footer') %>

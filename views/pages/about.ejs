<%- include('../partials/header') %>

<div class="about-page">
  <h1 class="page-title">Meet Our Team</h1>

  <!-- First Row: First 3 Team Members -->
  <div class="team-row">
    <% teamMembers.slice(0, 3).forEach(member => { %>
      <div class="team-member">
        <img src="/images/team/<%= member.photo %>" alt="<%= member.name %>" class="team-photo">
        <h2><%= member.name %></h2>
        <h4><%= member.role %></h4>
        <p><%= member.description %></p>
      </div>
    <% }) %>
  </div>

  <!-- Second Row: Last 3 Team Members -->
  <div class="team-row">
    <% teamMembers.slice(3).forEach(member => { %>
      <div class="team-member">
        <img src="/images/team/<%= member.photo %>" alt="<%= member.name %>" class="team-photo">
        <h2><%= member.name %></h2>
        <h4><%= member.role %></h4>
        <p><%= member.description %></p>
      </div>
    <% }) %>
  </div>

  <!-- Organization Description -->
  <div class="organization-info">
    <p>
      Our organization is committed to building strong, tech-empowered communities.
      Through innovation, collaboration, and a heart for service, we strive to create
      platforms and events that bring people together and inspire meaningful change.
    </p>
  </div>
</div>

<%- include('../partials/footer') %>
